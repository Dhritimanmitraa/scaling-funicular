# Server Configuration
PORT=3000
NODE_ENV=development

# Database Configuration (Neon PostgreSQL)
NEON_DATABASE_URL=postgresql://username:password@ep-xxx-xxx.us-east-1.aws.neon.tech/gyanai?sslmode=require

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=7d

# Free AI API Keys
HUGGINGFACE_API_KEY=your_huggingface_token_here
GROQ_API_KEY=your_groq_api_key_here
RUNWAY_API_KEY=your_runway_api_key_here

# Optional: Paid AI Services (if you want to upgrade later)
# OPENROUTER_API_KEY=your_openrouter_api_key_here
# FAL_AI_API_KEY=your_fal_ai_api_key_here

# Cloud Storage
CLOUD_STORAGE_BUCKET=your_cloud_storage_bucket_here
CLOUD_STORAGE_API_KEY=your_cloud_storage_api_key_here

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:8080

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
